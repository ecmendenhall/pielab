<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :content %>
      <%= f.text_area :content, placeholder: "Compose a new post...", value: new_image_text %>

  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
