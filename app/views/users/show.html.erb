<% provide(:title, @user.name) %>
<div class="row">
    <aside class="span4">
        <section>
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <%= @user.email %>
        </section>
    </aside>
    <div class="span8">
        <% if @user.posts.any? %>
            <h2>Posts (<%= @user.posts.count %>)</h2>
            <div class="posts">
                <%= render @posts %>
            </div>
            <%= will_paginate @posts %>
        <% end %>
    </div>
</div>
